{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run lint (web)",
            "type": "shell",
            "command": "yarn lint",
            "problemMatcher": {
                "base": "$tslint5",
                "fileLocation": "absolute"
            },
            "options": {
                "cwd": "web/"
            }
        },
        {
            "label": "Run lint (server)",
            "type": "shell",
            "command": "yarn lint",
            "problemMatcher": {
                "base": "$tslint5",
                "fileLocation": "absolute"
            },
            "options": {
                "cwd": "server/"
            }
        }
    ]
}
